<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteTextInputEditText">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/loginEditText_textSize</item>
        <item name="android:textColorHighlight">@color/colorWhite</item>
        <item name="android:color">@color/colorWhite</item>
        <item name="android:colorFocusedHighlight">@color/colorWhite</item>

    </style>


    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/loginEditText_textSize</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:textSize">@dimen/loginEditText_textSize</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RaisedButtonLight" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorSecondaryLight</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
