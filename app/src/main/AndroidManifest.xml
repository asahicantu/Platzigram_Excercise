<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asahicantu.platzigram_exercise">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- android:roundIcon="@mipmap/ic_launcher_round" -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.asahicantu.platzigram_exercise.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.asahicantu.platzigram_exercise.activity.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:parentActivityName="com.asahicantu.platzigram_exercise.LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asahicantu.platzigram_exercise.LoginActivity" />
        </activity>
        <activity
            android:name="com.asahicantu.platzigram_exercise.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name="com.asahicantu.platzigram_exercise.view.ClientCardView"></activity>

        <activity
            android:name="com.asahicantu.platzigram_exercise.activity.PictureDetailActivity"
            android:label="@string/title_activity_picture_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName="com.asahicantu.platzigram_exercise.activity.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asahicantu.platzigram_exercise.activity.MainActivity" />
            </activity>

    </application>

</manifest>