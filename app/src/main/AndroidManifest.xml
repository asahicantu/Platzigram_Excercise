<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asahicantu.platzigram_exercise">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- android:roundIcon="@mipmap/ic_launcher_round" -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:parentActivityName=".login.view.LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asahicantu.platzigram_exercise.login.view.LoginActivity" />
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name=".view.ClientCardView" />
        <activity
            android:name=".view.PictureDetailActivity"
            android:label="@string/title_activity_picture_detail"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asahicantu.platzigram_exercise.view.MainActivity" />
        </activity>
    </application>

</manifest>